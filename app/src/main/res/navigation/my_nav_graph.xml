<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.iiitlucknow.android.festify.HomeFragment"
        android:label="HomeFragment">
        <action
            android:id="@+id/action_eventsFragment_to_clickFragment"
            app:destination="@id/clickFragment" />
    </fragment>
    <fragment
        android:id="@+id/regEventsFragment"
        android:name="com.iiitlucknow.android.festify.home.RegEventsFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_regevents">

    </fragment>
    <fragment
        android:id="@+id/addEventsFragment"
        android:name="com.iiitlucknow.android.festify.AddEventFragment"
        android:label="fragment_addevents"
        tools:layout="@layout/fragment_addevents" />
    <fragment
        android:id="@+id/clickFragment"
        android:name="com.iiitlucknow.android.festify.EventsInfoFragment"
        android:label="fragment_click"
        tools:layout="@layout/fragment_eventsinfo">
        <argument
            android:name="event"
            app:argType="string" />
    </fragment>
</navigation>
